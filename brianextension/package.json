{
  "name": "brianextension",
  "displayName": "brianExtension",
  "publisher": "brian-team",
  "description": "brianExtension",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-team/brian-code-editor"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Data Science", "Machine Learning", "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:brian"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.compileBrainFile",
        "title": "Compile Brain File"
      },
      {
        "command": "extension.runBrainFile",
        "title": "Run Brain File"
      },
      {
        "command": "extension.formatBrainFile",
        "title": "Format Brain File"
      },
      {
        "command": "extension.validateBrainFile",
        "title": "Validate Brain File"
      },
      {
        "command": "extension.openBrainDocumentation",
        "title": "Open Brain Documentation"
      },
      {
        "command": "extension.toggleBrainPanel",
        "title": "Toggle Brain Panel"
      }
    ],

    "keybindings":[
      {
        "command": "extension.compileBrainFile",
        "key": "ctrl + shift + b",
        "mac": "cmd + shift + b",
        "when": "editorTextFocus && editorLangId == brian"
      },
      {
        "command": "extension.runBrainFile",
        "key": "ctrl + shift + r",
        "mac": "cmd + shift + r",
        "when": "editorTextFocus && editorLangId == brian"
      }
    ],
    "languages": [
      {
        "id": "brian",
        "extensions": [
          ".brian"
        ],
        "aliases": [
          "Brian"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "brian",
        "scopeName": "source.brian",
        "path": "./syntaxes/brian.tmLanguage.json"
      }
    ],

    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == brian",
          "command": "extension.compileBrainFile",
          "group": "navigation"
        },
        {
          "when": "editorLangId == brian",
          "command": "extension.runBrainFile",
          "group": "navigation"
        },
        {
          "when": "editorLangId == brian",
          "command": "extension.formatBrainFile",
          "group": "navigation"
        },
        {
          "when": "editorLangId == brian",
          "command": "extension.validateBrainFile",
          "group": "navigation"
        },
        {
          "when": "editorLangId == brian",
          "command": "extension.openBrainDocumentation",
          "group": "navigation"
        },
        {
          "when": "editorLangId == brian",
          "command": "extension.toggleBrainPanel",
          "group": "navigation"
        }
      ]
    }

  },


  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
