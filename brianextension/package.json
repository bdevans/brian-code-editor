{
  "name": "brianextension",
  "displayName": "brianExtension",
  "publisher": "brian-team",
  "description": "brianExtension",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/brian-team/brian-code-editor"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Data Science", "Machine Learning", "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:brian"
  ],
  "main": "./extension.js",
  "contributes": {

    "languages": [
      {
        "id": "brian",
        "extensions": [
          ".brian"
        ],
        "aliases": [
          "Brian"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "brian",
        "scopeName": "source.brian",
        "path": "./brianLang/syntax/brian.tmLanguage.json"
      },
      {
        "injectTo": ["source.python"],
        "scopeName": "brian.injection",
        "path": "./brianLang/syntax/brian.injection.json"
      }
    ],
    "hoverProvider": true

  },


  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
