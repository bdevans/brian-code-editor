{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Brian",
  "scopeName": "source.brian",
  "fileTypes": ["brian"],

  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#equation"
    },
    {
      "include": "#constant"
    },
    {
      "include": "#variable"
    },

    {
      "include": "#bracket"
    },
    {
      "include": "#operator"
    }
  ],
  "repository": {
    "equation": {
      "patterns": [

        {
          "name": "meta.variable_definition.brian",
          "begin": "\\bd",
          "end":"dt\\b",
          "patterns": [
            {
              "name": "variable.equation.brian",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*"
            },
            {
              "include": "#operator"
            }
          ]

        },
        {
          "name":"meta.equation_rhs.brian",
          "begin": "(?<=\\=\\s*)",
          "end": "$",
          "patterns": [
            {
              "include": "#constant"
            },
            {
              "include": "#variable"
            },
            {
              "include": "#operator"
            },
            {
              "include": "#bracket"
            },
            {
              "include": "#meta.after_colon.brian"
            }
          ]
        }
      ]
    },
    "meta.after_colon.brian":{
      "patterns": [
        {
          "name": "meta.after_colon.brian",
          "begin": ":\\s*",
          "end": "$",
          "patterns": [

            {
              "name":"keyword.flag.brian",
              "match": "\\b((\\w+))\\b"
            }
          ]
        }
      ]
    },
    "operator":{
      "patterns": [
        {
        "name":"operator.assignment.brian",
        "match": "\\="
        },
        {
        "name":"operator.differential.brian",
        "match": "\\/"
        }
      ]
    },

    "constant": {
      "patterns": [
        {
          "name": "constant.numeric.brian",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.character.brian",
          "match":"\\b\\w\\b"
        },
        {
          "name": "constant.language.brian",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "keyword.unit.brian",
          "match": "\\b\\w+\\b"
        }
      ]
    },
    "bracket": {
      "patterns": [
        {
          "name": "bracket.brian",
          "match": "[\\(\\)]"
        },
        {
          "name": "bracket.illegal.brian",
          "match": "[\\[\\]{}]"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.brian",
          "match": "#.*$"
        },
        {
          "name": "comment.block.brian",
          "begin": "\\/\\*",
          "end": "\\*\\/"
        }
      ]
    }
  }
}
